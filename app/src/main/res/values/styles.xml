<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@android:style/Theme.Holo.NoActionBar">
        <item name="android:alertDialogTheme">@style/YourAlertDialogTheme</item>
        <item name="backgroundColor">@color/backgroundColorLight</item>
        <item name="backgroundColorDark">@color/backgroundColorLightSecond</item>
        <item name="textColor">@color/text_color</item>
        <item name="colorPrimary">@color/accent_color</item>
        <item name="textColorDark">@color/text_highlight</item>
        <item name="colorPrimaryDark">@color/accent_color_dark</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="PrefsTheme2" parent="android:Theme.Material.Dialog">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorAccent">@color/accent_color</item>
        <item name="android:colorPressedHighlight">@color/accent_color</item>
        <item name="android:colorLongPressedHighlight">@color/accent_color</item>
        <item name="android:colorFocusedHighlight">@color/accent_color</item>
        <item name="android:colorActivatedHighlight">@color/accent_color</item>
        <item name="android:activatedBackgroundIndicator">@color/background</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:listViewStyle">@style/listViewPrefs</item>
        <item name="android:actionBarSize">48dp</item>
    </style>

    <style name="listViewPrefs" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/background</item>
        <item name="android:cacheColorHint">@color/background</item>
    </style>

    <style name="YourAlertDialogTheme">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:background">@color/background</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:textColorAlertDialogListItem">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="android:textColorSecondary">@color/text_color</item>
        <item name="android:actionMenuTextColor">@color/text_color</item>
        <item name="android:colorAccent">@color/accent_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>



