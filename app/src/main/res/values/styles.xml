    </style>


    <style name="AdvanceTheme" parent="@android:style/Theme.NoTitleBar">
        <item name="backgroundColor">@color/advance_color</item>
        <item name="backgroundColorDark">@color/advance_color</item>
        <item name="textColor">@color/text_white</item>
