<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="?attr/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <ImageView
            android:id="@+id/smile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_update_not_available"
            android:tint="?attr/colorPrimary"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="22sp"
            android:textColor="?attr/textColor"
            android:text="@string/no_updates_text"
            android:gravity="center"
            android:lines="2"/>

        <LinearLayout
            android:id="@+id/interact_layout"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:background="@drawable/button_background_shape"
            android:backgroundTint="?attr/backgroundColor"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/interact_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_check"
                android:tint="?attr/colorPrimary" />

            <TextView
                android:id="@+id/interact_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:textSize="18sp"
                android:textColor="?attr/textColor"
                android:text="@string/tap_to_check_updates"
                android:gravity="center"
                android:lines="2"/>

        </LinearLayout>

        <include
            android:id="@+id/download_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            layout="@layout/download_element_amoled"/>

        <TextView
            android:id="@+id/last_update_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_update_time_text"
            android:textColor="?attr/textColor"
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>

        <include
            android:id="@+id/download_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginTop="5dp"
            layout="@layout/device_info_layout_amoled"/>






        <ImageButton
            android:id="@+id/to_settings_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle_btn_qs_bg"
            android:src="@drawable/ic_settings"
            android:scaleType="fitCenter"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:tint="@color/white" />



    </LinearLayout>




</RelativeLayout>