<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:background="?attr/colorPrimaryDark"
            android:gravity="center"
            android:text="Dialog Title"
            android:textColor="@color/text_white"
            android:textSize="@dimen/textSizeGlobal" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <ProgressBar
                android:id="@+id/download_dlg_progress_bar"
                style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
                android:layout_width="220dp"
                android:layout_height="20dp"
                android:progress="10"
                android:progressTint="?attr/colorPrimaryDark"
                android:textColor="@color/text_color"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/download_dlg_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/secondTextSizeGlobal"
                android:visibility="gone"
                android:text="4faslkjf92304932" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Изменения"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/textSizeGlobal"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="30dp"
                android:paddingEnd="30dp">
                <TextView
                    android:id="@+id/download_dlg_changelog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dip"
                    android:gravity="center"
                    android:text="Changelog hereChangelog hereChangelog hereChangelog hereChangelog hereChangelog hereChangelog hereChangelog here"
                    android:textColor="?attr/textColor"
                    android:textSize="@dimen/secondTextSizeGlobal"/>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dcancel_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Cancel"
                android:textSize="@dimen/secondTextSizeGlobal"
                android:textColor="@color/text_white"/>

            <Button
                android:id="@+id/dok_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="OK"
                android:textSize="@dimen/secondTextSizeGlobal"
                android:textColor="@color/text_white"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>